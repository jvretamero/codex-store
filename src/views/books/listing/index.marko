<master-layout>
    <@body>
        <section class="section">
            <div class="container">
                <div class="columns is-centered">
                    <div class="column is-half">
                        <div class="codex-title has-text-centered">
                            <h1 class="title">Codex Store</h1>
                            <h2 class="subtitle">Books</h2>
                        </div>
                        <p class="has-text-centered">
                            <a class="button is-link is-light" href="/books/new">New book</a>
                        </p>
                        <table class="table is-striped is-fullwidth" id="books-list">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Title</th>
                                    <th>Price</th>
                                    <th>Edit</th>
                                    <th>Remove</th>
                                </tr>
                            </thead>
                            <tbody>
                                <for|book| of=input.books>
                                    <tr id=`book_${book.id}`>
                                        <td>${book.id}</td>
                                        <td>${book.title}</td>
                                        <td>${book.price}</td>
                                        <td>
                                            <a href=`/books/${book.id}`>Edit</a>
                                        </td>
                                        <td>
                                            <a class="remove-book" href="#" data-ref=book.id data-type="remove">Remove</a>
                                        </td>
                                    </tr>
                                </for>
                            </tbody>
                        </table> 
                    </div>
                </div>
            </div>
        </section>
    </@body>
    <@scripts>
        <script src="assets/js/book-remove.js"/>
    </@scripts>
</master-layout>
